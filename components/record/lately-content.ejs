<div class="py-1 d-flex align-items-center text-center">
  <div
    class="w-50 d-flex justify-content-center align-items-baseline flex-wrap"
  >
    <p class="fs-lh-9">旅行</p>
    <% if(data.travelTime) { %>
    <p class="fs-lh-2 fw-bold mx-1 lately-time"><%= data.travelTime %></p>
    <% } %>
    <p class="fs-lh-9">小時</p>
  </div>
  <div class="lately-divider"></div>
  <div class="w-50">
    <div class="d-flex justify-content-center align-items-baseline flex-wrap">
      <p class="fs-lh-9">啟程</p>
      <% if(data.departureAt) { %>
      <p class="fs-lh-7 fw-bold mx-1 lately-time-small">
        <%= data.departureAt %>
      </p>
      <% } %>
      <p class="fs-lh-9">PM</p>
    </div>
    <div class="d-flex justify-content-center align-items-baseline flex-wrap">
      <p class="fs-lh-9">抵達</p>
      <% if(data.arrivalAt) { %>
      <p class="fs-lh-7 fw-bold mx-1 lately-time-small">
        <%= data.arrivalAt %>
      </p>
      <% } %>
      <p class="fs-lh-9">AM</p>
    </div>
  </div>
</div>
